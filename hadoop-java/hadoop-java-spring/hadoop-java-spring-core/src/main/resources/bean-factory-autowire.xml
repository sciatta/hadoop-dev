<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="dog" class="com.sciatta.hadoop.java.spring.core.model.User">
        <property name="name" value="lucky"/>
    </bean>

    <!-- autowire constructor by type -->
    <bean id="cons" class="com.sciatta.hadoop.java.spring.core.ioc.beanfactory.autowire.OwnerCons" autowire="constructor"/>

    <!-- autowire property by name -->
    <bean id="propByName" class="com.sciatta.hadoop.java.spring.core.ioc.beanfactory.autowire.OwnerPropByName" autowire="byName"/>

    <!-- autowire property by type -->
    <bean id="propByType" class="com.sciatta.hadoop.java.spring.core.ioc.beanfactory.autowire.OwnerPropByType" autowire="byType"/>

</beans>